@model IEnumerable<SchoolSchedule.DAL.Database.Entities.Teacher>
@{
    ViewData["Title"] = "GetTeachers";
}

<h1 align="center">Перподаватели</h1>
<br />
<div class="row">
    <form class="form-group col-md-5">
        <div>
            <label class="form-label">ФИО преподавателя</label>
            <input type="text" class="form-control" id="inputTeacherName" />
        </div>
        <br />
        <button class="btn btn-primary btn-lg" id="addTeacher">Добавить преподавателя</button>
    </form>

    <div class="col-md-7">
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Преподаватель</th>
                    <th>Действие</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.FullName</td>
                        <td>
                            <div class="row">
                                <div class="col-md-5">
                                    <button class="btn btn-outline-warning" onclick="openDialog()">Изменить</button>
                                </div>
                                <div class="col-md-3">
                                    <button class="btn btn-outline-danger" onclick="deleteTeacher(@item.Id)">Удалить</button>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts
    {
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>

        $('#addTeacher').on('click', function (e) {
            e.preventDefault();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("AddTeacher", "Teacher")',
                data: {
                    teacherName: $('#inputTeacherName').val()
                },
                success: function (response) {
                    alert(response.description);
                    location.reload();
                },
                error: function (response) {
                    alert(response.responseJSON.description);
                }
            })
        });

        function openDialog() {
            dialog.dialog('open');
        }

        let dialog = $(`<div id="dialog" title="Редавкировать данные преподавателя">
                                          <form class="form-group col-md-6">
                                            <label class="form-label" for="teacherId">Введите текущий ID преподавателя</label>
                                            <input class="form-control" type="text" id="teacherId">
                                            <br/>
                                            <label class="form-label" for="teacherName">Введите ФИО преподавателя</label>
                                            <input class="form-control" type="text" id="teacherName">
                                          </form>
                                        </div>`).dialog({
            autoOpen: false,
            modal: true,
            width: 700,
            buttons: {
                "Сохранить": function () {
                    $.ajax({
                        url: '@Url.Action("Update", "Teacher")',
                        type: 'POST',
                        data: {
                            model: {
                                id: $('#teacherId').val(),
                                teacherName: $('#teacherName').val()
                            }
                        },
                        success: function (response) {
                            alert(response.description);
                            location.reload();
                        },
                        error: function (response) {
                            alert(response.responseJSON.description);
                        }
                    });

                    $(this).dialog("close");
                },
                "Отмена": function () {
                    $(this).dialog("close");
                }
            }
        });

        function deleteTeacher(id) {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("Delete", "Teacher")',
                data: { id: id },
                success: function (response) {
                    alert(response.desription);
                    location.reload();
                },
                error: function (response) {
                    alert(response.responseJSON.description);
                    location.reload();
                }
            });
        }


    </script>
}